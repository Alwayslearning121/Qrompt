{
  "manifest_version": 3,
  "name": "Qrompt",
  "description": "Prompt, generate with AI, and paste anywhere.",
  "version": "0.1.0",
  "action": {
    "default_title": "Qrompt",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://localhost/*",
    "*://127.0.0.1/*",
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}